# Configuration Backend Jarvis

# OpenRouter API (OBLIGATOIRE pour l'agent conversationnel)
# Obtenir une clé sur https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Modèle LLM par défaut (optionnel)
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=graphrag2024

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Voice Settings
STT_PROVIDER=whisper-local  # whisper-local ou groq
TTS_PROVIDER=edge-tts       # edge-tts ou coqui-local

# Groq API (optionnel, si vous utilisez Groq pour STT)
GROQ_API_KEY=your_groq_api_key_here

# Chemins temporaires
TEMP_DIR=/app/data/temp
